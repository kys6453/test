      context: ./receiver
      dockerfile: ./Dockerfile-receiver
    ports:
      - "5557:5557"
    environment:
      - PYZMQ_HOST=172.17.0.1
    network_mode: "host"
    volumes: 
      - ./data:/app/data
  processor0:
